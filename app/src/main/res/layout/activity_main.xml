<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Título de la app -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🚫 NoGracias - Bloqueador de Llamadas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#2c3e50"
        android:layout_marginBottom="24dp" />

    <!-- Estado del sistema -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Verificando compatibilidad..."
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="#e3f2fd" />

    <!-- Sección agregar prefijo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📞 Agregar Prefijo a Bloquear:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#34495e"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etPrefix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Ej: 600, 123, 5699284..."
            android:inputType="number"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="➕ Agregar"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Instrucciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 Mantén presionado un prefijo para eliminarlo"
        android:textSize="12sp"
        android:textColor="#7f8c8d"
        android:textStyle="italic"
        android:layout_marginBottom="16dp"
        android:textAlignment="center" />

    <!-- Lista de prefijos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Prefijos Bloqueados:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#34495e"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/lvPrefixes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/listview_background"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <!-- Información del servicio -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ IMPORTANTE: Habilita el servicio de filtrado en Configuración > Apps de llamadas"
        android:textSize="12sp"
        android:textColor="#e74c3c"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#ffebee" />

</LinearLayout>